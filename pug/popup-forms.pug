  // Попап формы

  // Для того что бы отобразить форму, к "popup-block" добавить класс "show-popup"

  // Форма Авторизации
  .auth-popup-form.popup-block.show-popup
    .popup-overlay
    form.popup-wrap
      .close.base-icon-cross
      h5.h Авторизация
      .text-t1 Введите Ваши данные для входа
      .input-row
        label Логин
        input.style1
      .input-row
        label Пароль
        input.style1
