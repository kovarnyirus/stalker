          .label Назначение
          .select
            select.style1
              option Парикмахерам
              option Парикмахерам
              option Парикмахерам
        .switcher
          .label Показывать
          a(href="#").button-style1
            span С логотипами
          a(href="#").button-style1.active
            span Только названия
        .search-form
          input(type="text" placeholder="Найти бренд").input
          button.submit.base-icon-search
