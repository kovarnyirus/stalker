extends templates/layout.pug

block vars
  -
    var
      title = 'Главная',
      logged = true;

block content
  main.main-container
    .container
      .slider-block.swiper-container
        .swiper-pagination
        .swiper-wrapper
          -
            var array = [
              {i: 'slide'},
              {i: 'bg2'},
            ]
          each i in array
            .swiper-slide(style="background-image: url(images/"+i.i+".jpg)")
      // Категории
      .categories-block.row
        -
          var array = [
            {i: 'cat1', h: 'Парикмахерам'},
            {i: 'cat2', h: 'Визажистам'},
            {i: 'cat3', h: 'Косметологам'},
            {i: 'cat4', h: 'Мастерам маникюра'},
            {i: 'cat5', h: 'Барберам'},
            {i: 'cat6', h: 'Стилистам'},
          ]
        each i in array
          .category-item.col-12.col-sm-6.col-md-4(style="background-image: url(images/"+i.i+".jpg)")
            .title= i.h
            a(href="#")
      // Акции
      .heading-block.with-button
        h4.h Акции и скидки
        a.button-style2(href="#")
          span Все акции
      .sale-carousel
        .prev.base-icon-prev
        .next.base-icon-next
        .swiper-container
          .swiper-wrapper
            -
              var array = [
                {i: 'sale1', h: 'ESTEL -50%'},
                {i: 'sale2', h: 'ESTEL -20%'},
                {i: 'sale3', h: 'ESTEL -520%'},
              ]
            each i in array
              .swiper-slide
                .sale-item(style="background-image: url(images/"+i.i+".jpg)")
                  .content
                    .title= i.h
                    .desc Описание акции<br>в пару строк для наглядности<br>возможные условия
                    .button
                      a.button-style2(href="#")
                        span Подробнее
      // Баннер обучения
      .banner-block(style="background-image: url(images/bg2.jpg)")
        .content
          .title Обучение
          .desc Анонсы тренингов и семинаров<br>от мировых брендов и лучших мастеров в сфере моды и красоты
          a.button-style2.variant2(href="#")
            span Перейти в раздел
      // Карусели Брендов
      .heading-block.with-button(style="margin-top: 65px;")
        h4.h Наша продукция
        a.button-style2(href="#")
          span Все бренды
      h6.brand-heading Уход за волосами
      .brands-carousel
        .prev.base-icon-prev
        .next.base-icon-next
        .swiper-container
          .swiper-wrapper
            - var n = 0;
            while n < 6
              - n++;
              .swiper-slide
                a.brand-item(href="#")
                  img(src="images/brand"+n+".jpg", alt="Brand")
